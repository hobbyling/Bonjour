    body{
      background: url(../../img/bg.jpg);
      /*background: #3498db;*/
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-position: center;
      background-size: cover;
      margin:0;
      font-family: 'Verdana', "微軟正黑體", "Arial";
    }

    .wrap{
      width: 960px;
      height: 500px;
      margin: 0 auto;
    }

    header{
      text-align: center;
    }

    h1{
      font-size: 50px;
      margin: 50px 0 50px 0;
    }
    
    main{
      width: 450px;
      margin: 0 auto;
      text-align: center;
      margin-top: 30px;
      background: #FFFFFF;
      box-shadow:4px 4px 12px 4px rgba(20%,20%,40%,0.5);
    }

    h2{
      display: inline-block;
      font-size: 30px;
      margin: 20px 0 20px 0;
    }

    form{
      width: 400px;
      margin: 0 auto;
    }
    
    .input{
      height: 40px;
      width: 350px;
      margin: 5px 0 10px 0;
      border-top: 1px solid #c6c5c5;
      border-left: 1px solid #c6c5c5;
      border-right: 1px solid #c6c5c5;
      border-bottom: 2px solid #c6c5c5;
      border-radius: 5px;
      background: #ecf0f1;
      font-size: 20px;
    }
    
    button{
      width: 350px;
      height: 40px;
      background-color: #2ecc71; /* Green */
        border: none;
        border-radius: 5px;
        color: white;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 10px 0px 15px 0px;
    }
    
    .logon{
      display: inline-block;
      margin: 10px 0 20px 0;
    }

    .logon a{
      text-decoration: none;
    }

    .logon a:hover{
      text-decoration: underline;
    }

